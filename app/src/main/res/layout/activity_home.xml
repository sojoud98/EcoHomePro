<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:background="@drawable/background"
    tools:context=".home"
    android:id="@+id/drawer_layout">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Choose a service"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="414dp"
        android:layout_height="613dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">


                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:onClick="cooking"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cooking" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reviews" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="127dp"
                    android:background="#8A000000"
                    android:padding="12dp"
                    android:text="Cleaning"
                    android:textColor="#ffffffff" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/babysitting"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:onClick="babySitting"
                    android:scaleType="fitCenter"
                    android:src="@drawable/babysitting" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reviews" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="127dp"
                    android:background="#8A000000"
                    android:padding="12dp"
                    android:text="BabySitting"
                    android:textColor="#ffffffff" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/cleaning"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:onClick="clean"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cleaning" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reviews" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="127dp"
                    android:background="#8A000000"
                    android:padding="12dp"
                    android:text="Cleaning"
                    android:textColor="#ffffffff" />

            </FrameLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>